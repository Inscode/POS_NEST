{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2021",  // Keep ES2021 for compatibility
    "module": "CommonJS",  // Use CommonJS for Node.js modules
    "skipLibCheck": true,  // Skips library checks for faster compilation
    "moduleResolution": "node"  // Default for Node.js environment
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],  // Make sure the test files are included
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
