{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",  // Ensures SonarQube compatibility
    "resolvePackageJsonExports": false,
    "verbatimModuleSyntax": false,
    "moduleDetection": "legacy",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
