{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",

    "resolvePackageJsonExports": false,
    "verbatimModuleSyntax": false,
    "moduleDetection": "legacy",


    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.spec.ts",   // Sonar treats tests separately
    "**/*.test.ts"
  ]
}
