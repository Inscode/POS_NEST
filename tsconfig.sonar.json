{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2021",  
    "module": "CommonJS",
    "skipLibCheck": true,  
    "moduleResolution": "node" 
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],  
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
